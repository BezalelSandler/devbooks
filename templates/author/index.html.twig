{% extends 'base.html.twig' %}

{% block title %}Authors index{% endblock %}

{% block body %}
    <h1>Authors index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for author in authors %}
            <tr>
                <td>{{ author.id }}</td>
                <td>{{ author.Name }}</td>
                <td>
                    <a href="{{ path('author_show', {'id': author.id}) }}">show</a>
                    <a href="{{ path('author_edit', {'id': author.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('author_new') }}" class="btn btn-primary">Create new</a>
    <a href="{{ path('author_new_fakes') }}" class="btn btn-primary">Create fakes</a>
    <a href="/books" class="btn btn-secondary">Books</a>
{% endblock %}
